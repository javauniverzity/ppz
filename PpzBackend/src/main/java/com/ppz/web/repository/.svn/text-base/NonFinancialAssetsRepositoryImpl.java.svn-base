package com.ppz.web.repository;

import java.util.List;

import org.hibernate.criterion.DetachedCriteria;
import org.hibernate.criterion.Restrictions;
import org.springframework.stereotype.Repository;

import com.ppz.web.entity.Avatar;
import com.ppz.web.entity.NonFinancialAssets;

@Repository(value = "nonFinancialAssetsRepository")
public class NonFinancialAssetsRepositoryImpl extends AbstractRepository<NonFinancialAssets, Long> implements NonFinancialAssetsRepository {

	@SuppressWarnings("unchecked")
	@Override
	public List<NonFinancialAssets> getNonFinancialAssetsListByAvatar(Avatar avatar) {
		DetachedCriteria crit = DetachedCriteria.forClass(NonFinancialAssets.class).add(Restrictions.eq("avatar", avatar));
		@SuppressWarnings("rawtypes")
		List results = getTemplate().findByCriteria(crit);
		if (results.size() != 0) {
			return (List<NonFinancialAssets>) results;
		} else {
			return null;
		}
	}

	@Override
	public void createNonFinancialAssets(NonFinancialAssets nonFinancialAssets) {
		getTemplate().persist(nonFinancialAssets);
	}

	@Override
	public NonFinancialAssets updateNonFinancialAssets(NonFinancialAssets nonFinancialAssets) {
		return getTemplate().merge(nonFinancialAssets);
	}

	@Override
	public Class<NonFinancialAssets> getType() {
		return NonFinancialAssets.class;
	}

}
