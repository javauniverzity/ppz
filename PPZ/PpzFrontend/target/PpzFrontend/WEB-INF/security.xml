<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
  xmlns:beans="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/security
           http://www.springframework.org/schema/security/spring-security-3.0.3.xsd
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">       

    <global-method-security pre-post-annotations="enabled"/>

    <http use-expressions="true">
        <intercept-url pattern="/css/**" filters="none" />
        <intercept-url pattern="/ppz**" access="hasAnyRole('ROLE_USER', 'ROLE_ADMIN')" />
        <intercept-url pattern="/edit**" access="hasAnyRole('ROLE_USER', 'ROLE_ADMIN')" />
        <intercept-url pattern="/bank**" access="hasAnyRole('ROLE_USER', 'ROLE_ADMIN')" />
        <intercept-url pattern="/advisor**" access="hasAnyRole('ROLE_ADVISOR')" />
        <form-login login-page="/code.html" default-target-url="/ppz.html"/>
        <http-basic />
        <remember-me />
        <logout logout-success-url="/index.html" />
    </http>
    
    <authentication-manager>
		<authentication-provider user-service-ref="userService" >
			<password-encoder hash="md5">
				<salt-source user-property="username"/>
			</password-encoder>
		</authentication-provider>
	</authentication-manager>
</beans:beans>